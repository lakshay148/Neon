<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/header_options_imageereview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagereview_deletebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:src="@drawable/remove" />

        <ImageView
            android:id="@+id/imagereview_rotatebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:src="@drawable/rotate_image" />

        <!-- <ImageView
             android:id="@+id/imagereview_recaptureCambtn"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:clickable="true"
             android:src="@drawable/camera_image_reviw" />

         <ImageView
             android:id="@+id/imagereview_recaptureGalbtn"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:clickable="true"
             android:src="@drawable/gallery_image_reviw" />-->

    </RelativeLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/imagereview_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer_layout_imagereview_fragment"
        android:layout_below="@+id/header_options_imageereview"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:placeholderImage="@drawable/camera" />

    <LinearLayout
        android:id="@+id/footer_layout_imagereview_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/imagereview_tag_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_dropdown"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="Select Label"
            android:textColor="@color/black" />

    </LinearLayout>
</RelativeLayout>
