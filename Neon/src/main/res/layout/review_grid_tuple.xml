<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/review_image_height"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ivReview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/review_image_height"
        android:layout_above="@+id/footer_layout_imagereview_fragment"
        android:layout_below="@+id/header_options_imageereview"
        app:placeholderImage="@drawable/camera" />
    <!--<ImageView
        android:id="@+id/ivReview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/review_image_height" />-->

    <TextView
        android:id="@+id/tvTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/select_tag"
        android:background="@color/tranparent_black"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:padding="@dimen/default_padding"
        android:textColor="@color/white" />

</RelativeLayout>